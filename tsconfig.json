{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",

    "paths": {
      "@routes/*": ["src/routes/*"],
      "@common/*": ["src/common/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@socket/*": ["src/socket/*"],
      "@src/*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["src/**/*.ts", "src/@types/**/*.d.ts"],
  "exclude": ["node_modules"],
}
